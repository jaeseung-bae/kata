{{>layouts/header}}
<form class="container-fluid" action="/articles/update" method="post">
  <input name="id" type="hidden" value="{{article.id}}"></input>
    <div>
      <label class="form-label">제목</label>
      <input class="form-control" type="text" name="title" value="{{article.title}}">
    </div>
    <div>
      <label class="form-label">내용</label>
      <textarea class="form-control" rows="3" name="content">{{article.content}}</textarea>
    </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
<a href="/articles/{{article.id}}">Back</a>
{{>layouts/footer}}